
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabel Label</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <style>
        /* #tes {
            border: 1px solid;
        } */

        .container{

            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 90px;
        }

        .add{
            display: flex;
            justify-content: center;
            align-items: center;

        }
        .btn{
            display: flex;
            justify-content: center;
            align-items: center;


        }
        .nav{
            display: flex;
            padding-top: 10px;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body>
    <%- include(`./partials/navbar`) %> 
    <div class="add">
        <h1>List Song</h1>
    </div>
    
    <div class="nav">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline" action="/songs" method="get">
              <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="search">
              <button type="submit" value="Search">Search</button>
            </form>
          </nav>
    </div>
    <div class="container">
        
    <table border="1">
        <thead>
            <th  style="padding-left: 60px;">Title</th>
            <th>Band Name</th>
            <th>Duration</th>
            <th>Genre</th>
            <th>Total Vote</th>
            <th style="padding-left: 150px;">Action</th>
        </thead>
        <tbody >
           
            <% data.forEach(el => { %>

                <tr>
                    <td><%= el.title %> </td>
                    <td><%= el.bandName %> </td>
                    <td><%= el.duration %> </td>
                    <td><%= el.genre %> </td>
                    <td><%= el.totalVote %> </td>
                    <td>
                        <button>
                            <a href="/songs/<%= el.id %> ">Read Songs</a>
                        </button>
                        <button>
                            <a href="/songs/<%= el.id %>/edit ">Edit</a>
                        </button>
                        <button>
                            <a href="/songs/<%= el.id %>/delete ">Delete</a>
                        </button>
                        <button>
                            <a href="/songs/add">Click to Add more Song</a>
                        </button>  
                        <br>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>